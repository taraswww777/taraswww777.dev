{
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "tsx": true,
      "decorators": true
    },
    "transform": {
      "react": {
        "runtime": "automatic"
      }
    },
    "target": "es2021",
    "baseUrl": ".", // Для поддержки алиасов
    "paths": {
      "@/*": ["./src/*"] // Пример алиасов
    }
  },
  "module": {
    "type": "es6"
  }
}
